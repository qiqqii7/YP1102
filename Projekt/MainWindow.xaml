        <PasswordBox x:Name="password_Password" Margin="0,0,73,96" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>
        <TextBox x:Name="login_TextBox" Margin="0,0,73,136" TextWrapping="Wrap" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="120"/>


        <Button x:Name="exet" Content="Войти" Margin="0,0,0,47" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="72" Click="exet_Click"></Button>


        <Button Content="Выход" Margin="0,0,60,47" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="73" Click="Button_Click"/>

    </Grid>
</Window>
